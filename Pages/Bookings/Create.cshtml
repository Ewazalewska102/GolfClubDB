@page
@model GolfClubDB.Pages.Bookings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Booking.MemberId" class="control-label"></label>
                <select asp-for="Booking.MemberId" class="form-control" asp-items="ViewBag.MemberId" aria-required="true"></select>
                <span asp-validation-for="Booking.MemberId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Booking.BookingDate" class="control-label"></label>
                <input asp-for="Booking.BookingDate" class="form-control" type="date" aria-required="true" />
                <span asp-validation-for="Booking.BookingDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Booking.TeeTime" class="control-label"></label>
                <input asp-for="Booking.TeeTime" class="form-control" type="datetime-local" aria-required="true" />
                <span asp-validation-for="Booking.TeeTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.PlayerCount" class="control-label"></label>
                <input asp-for="Booking.PlayerCount" class="form-control" />
                <span asp-validation-for="Booking.PlayerCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.Player2Name" class="control-label"></label>
                <input asp-for="Booking.Player2Name" class="form-control" />
                <span asp-validation-for="Booking.Player2Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.Player2Handicap" class="control-label"></label>
                <input asp-for="Booking.Player2Handicap" class="form-control" />
                <span asp-validation-for="Booking.Player2Handicap" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.Player3Name" class="control-label"></label>
                <input asp-for="Booking.Player3Name" class="form-control" />
                <span asp-validation-for="Booking.Player3Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.Player3Handicap" class="control-label"></label>
                <input asp-for="Booking.Player3Handicap" class="form-control" />
                <span asp-validation-for="Booking.Player3Handicap" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.Player4Name" class="control-label"></label>
                <input asp-for="Booking.Player4Name" class="form-control" />
                <span asp-validation-for="Booking.Player4Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Booking.Player4Handicap" class="control-label"></label>
                <input asp-for="Booking.Player4Handicap" class="form-control" />
                <span asp-validation-for="Booking.Player4Handicap" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
