@page
@model GolfClubDB.Pages.Bookings.IndexModel

@{
    ViewData["Title"] = "Bookings";
}

<div class="page-header">
    <h1>Bookings</h1>
    <p>View all bookings or filter bookings for a selected member.</p>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div class="text-muted small">
        Showing <strong>@Model.Booking.Count</strong> booking(s)
    </div>
    <a class="btn btn-success" asp-page="Create">+ Create Booking</a>
</div>

@if (Model.MemberId.HasValue)
{
    <div class="alert alert-info">
        Viewing bookings for member:
        <strong>
            @(Model.SelectedMember != null
                    ? $"{Model.SelectedMember.MembershipNumber} - {Model.SelectedMember.Name} ({Model.SelectedMember.Email})"
                    : $"#{Model.MemberId.Value}")
        </strong>
        <a class="ms-2" asp-page="./Index">Clear filter</a>
    </div>
}

<table class="table table-hover bg-white shadow-sm">
    <thead>
        <tr>
            <th>Member</th>
            <th>Booking Date</th>
            <th>Tee Time</th>
            <th>Players</th>
            <th>Player 2</th>
            <th>H/C</th>
            <th>Player 3</th>
            <th>H/C</th>
            <th>Player 4</th>
            <th>H/C</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Booking)
        {
            <tr>
                <td>@(item.Member != null ? item.Member.Email : "")</td>
                <td>@item.BookingDate.ToString("yyyy-MM-dd")</td>
                <td>@item.TeeTime.ToString("HH:mm")</td>
                <td><span class="badge bg-success">@item.PlayerCount</span></td>

                <td>@item.Player2Name</td>
                <td>@item.Player2Handicap</td>

                <td>@item.Player3Name</td>
                <td>@item.Player3Handicap</td>

                <td>@item.Player4Name</td>
                <td>@item.Player4Handicap</td>

                <td class="text-end">
                    <a class="btn btn-sm btn-outline-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-secondary" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-outline-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
